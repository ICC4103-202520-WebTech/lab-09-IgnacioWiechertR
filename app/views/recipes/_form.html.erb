<%= form_with(model: recipe, class: "needs-validation", local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Recipe Title", class: "form-label fw-semibold" %>
    <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Enter recipe title", required: true %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= f.label :cook_time, "Cook Time (minutes)", class: "form-label fw-semibold" %>
      <%= f.number_field :cook_time, class: "form-control", placeholder: "e.g. 45", required: true, min: 1 %>
    </div>
    <div class="col-md-6 mb-3">
      <%= f.label :difficulty, class: "form-label fw-semibold" %>
      <%= f.select :difficulty, ['Easy', 'Medium', 'Hard'], { prompt: "Select difficulty" }, class: "form-select", required: true %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :instructions, "Instructions", class: "form-label fw-semibold" %>
    <%= f.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end gap-2 mt-4">
    <%= link_to "Cancel", recipes_path, class: "btn btn-outline-secondary" %>
    <%= f.submit recipe.new_record? ? "Create Recipe" : "Update Recipe", class: "btn btn-primary px-4" %>
  </div>
<% end %>
