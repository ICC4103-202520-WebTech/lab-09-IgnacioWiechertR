<body class="bg-light">
  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="fw-bold text-dark">All Recipes</h1>
      <% if user_signed_in? %>
        <%= link_to "‚ûï New Recipe", new_recipe_path, class: "btn btn-primary shadow-sm" %>
      <% end %>
    </div>

    <% if @recipes.any? %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% @recipes.each do |recipe| %>
          <div class="col">
            <div class="card h-100 shadow-sm border-0 transition hover-shadow">
              <div class="card-body">
                <h5 class="card-title fw-semibold"><%= recipe.title %></h5>
                <p class="card-text text-muted small mb-1">‚è±Ô∏è <strong><%= recipe.cook_time %> min</strong></p>
                <p class="card-text text-muted small mb-3">üî• <strong><%= recipe.difficulty %></strong></p>

                <div class="d-flex justify-content-between align-items-center mt-3">
                  <%= link_to "View", recipe, class: "btn btn-outline-primary btn-sm" %>
                  <% if user_signed_in? %>
                    <div class="btn-group">
                      <%= link_to "Edit", edit_recipe_path(recipe), class: "btn btn-outline-warning btn-sm" %>
                      <%= link_to "Delete", recipe,
                          data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this recipe?" },
                          class: "btn btn-outline-danger btn-sm" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info text-center mt-4">
        There are no recipes yet! 
        <% if user_signed_in? %>
          <%= link_to "Be the first to create one.", new_recipe_path, class: "fw-semibold text-decoration-none" %>
        <% end %>
      </div>
    <% end %>
  </div>
</body>
