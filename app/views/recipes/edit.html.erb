<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-warning text-dark text-center py-3 rounded-top">
          <h2 class="mb-0">Editing: <%= @recipe.title %></h2>
        </div>
        <div class="card-body p-4">
          <%= render 'form', recipe: @recipe %>
        </div>
      </div>

      <div class="text-center mt-4">
        <%= link_to "Show Recipe", @recipe, class: "btn btn-outline-info me-2" %>
        <%= link_to "Back to Recipes", recipes_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
