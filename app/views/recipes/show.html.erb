<div class="container my-5">
  <div class="card shadow p-4">
    <h1 class="mb-3 text-center"><%= @recipe.title %></h1>

    <div class="row mb-3 text-center">
      <div class="col-md-6">
        <p class="fw-semibold text-secondary">‚è± Cook Time: <%= @recipe.cook_time %> min</p>
      </div>
      <div class="col-md-6">
        <p class="fw-semibold text-secondary">üí™ Difficulty: <%= @recipe.difficulty %></p>
      </div>
    </div>

    <hr>

    <h4 class="mb-3">Instructions</h4>
    <div class="border p-3 bg-light rounded">
      <%= @recipe.instructions.to_s.html_safe %>
    </div>

    <div class="mt-4 d-flex justify-content-between">
      <%= link_to "‚Üê Back", recipes_path, class: "btn btn-outline-secondary" %>
      <div>
        <% if can? :update, @recipe %>
          <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-warning me-2" %>
        <% end %>
        <% if can? :destroy, @recipe %>
          <%= link_to "Delete", @recipe, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
